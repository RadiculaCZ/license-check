{
  "image": "mcr.microsoft.com/vscode/devcontainers/go:1.20",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "github.copilot-labs",
        "github.copilot",
        "editorconfig.editorconfig",
        "github.copilot-chat"
      ],

      "settings": {
        "gopls": {
          "ui.semanticTokens": true
        },
        "go.lintTool": "golangci-lint"
      }
    }
  },

  "containerEnv": {
    "HOME": "/home/vscode"
  },

  "remoteUser": "vscode"
}
